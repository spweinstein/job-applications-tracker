<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>

  <body>
    <%- include('../partials/nav.ejs');%>
    
    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <div class="card">
        <div class="card-header">
          <div><strong>Title:</strong> <%= activity.title %></div>
          <div><strong>Company:</strong> <%= activity.company.name %></div>
        </div>
        <div><strong>Type:</strong> <%= activity.type %></div>
        <div><strong>State:</strong> <span class="state state-<%= activity.state.toLowerCase() %>"><%= activity.state %></span></div>
        <% if(activity.jobApp){ %>
        <div><strong>Job Application:</strong> <a href="/jobApps/<%= activity.jobApp._id %>"><%= activity.jobApp.title %></a></div>
        <% } %>
        <div>
          <strong>Start Date:</strong> <%= new Date(activity.startAt).toLocaleDateString() %>
        </div>
        <% if(activity.endAt){ %>
        <div>
          <strong>End Date:</strong> <%= new Date(activity.endAt).toLocaleDateString() %>
        </div>
        <% } %>
        <% if(activity.description){ %>
        <div>
          <strong>Description:</strong> <%= activity.description %>
        </div>
        <% } %>
        <% if(activity.notes){ %>
        <div>
          <strong>Notes:</strong> <%= activity.notes %>
        </div>
        <% } %>
        <div class="actions">
          <a href="/activities/<%=activity._id%>/edit" class="btn btn-primary btn-sm">Edit</a>
          <form action="/activities/<%=activity._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
