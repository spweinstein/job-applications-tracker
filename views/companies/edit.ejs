<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>
  <body>
    <%- include('../partials/nav.ejs'); %>

    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>

      <form
        class="crud-form"
        action="/companies/<%=company._id%>?_method=PUT"
        method="POST"
      >
        <div class="field">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="<%=company.name%>" />
        </div>
        <div class="field">
          <label for="website">Website</label>
          <input
            type="text"
            name="website"
            id="website"
            value="<%=company.website%>"
          />
        </div>
        <div class="field">
          <label for="description">Description</label>
          <input
            type="text"
            name="description"
            id="description"
            value="<%=company.description%>"
          />
        </div>
        <div class="field">
          <label for="notes">Notes</label>
          <input
            type="text"
            name="notes"
            id="notes"
            value="<%=company.notes%>"
          />
        </div>
        <div class="actions">
          <button type="submit">Save Company</button>
        </div>
      </form>
    </main>
  </body>
</html>
