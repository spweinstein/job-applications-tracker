<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>
  <body>
    <%- include('../partials/nav.ejs'); %>
    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <form class="crud-form" action="/coverLetters/<%=coverLetters._id%>?_method=PUT" method="POST">
        <%- include('../partials/forms/textInput.ejs', {
          fieldName: "name",
          fieldLabel: "Name",
          fieldValue: coverLetter.name
        }) %>
        <div class="field">
          <label for="body">Body</label>
          <textarea name="body" id="body"><%= coverLetter?.body %></textarea>
        </div>
        <div class="actions">
          <button type="submit">Save Cover Letter</button>
        </div>
      </form>
    </main>
  </body>
</html>
