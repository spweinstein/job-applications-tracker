<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs'); %>

  <body>
    <%- include('../partials/nav.ejs');%>

    <main class="page-container">
      <%- include('../partials/pageHeader.ejs'); %>
      <div class="card">
        <div class="card-header">
          <div><strong>Cover Letter:</strong> <%= coverLetter.name %></div>
        </div>
        <div><p><%= coverLetter.body %></p></div>
        <div class="actions">
          <a
            href="/coverLetters/<%=coverLetter._id%>/edit"
            class="btn btn-primary btn-sm"
            >Edit</a
          >
          <form
            action="/coverLetters/<%=coverLetter._id%>?_method=DELETE"
            method="POST"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
