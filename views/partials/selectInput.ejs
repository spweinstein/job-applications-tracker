<div class="field">
    <label for="<%= fieldName %>">
        <%= fieldLabel %>
    </label>
    <select name="<%= fieldName %>" id="<%= fieldName %>">
        <% for(let i = 0; i < fieldOptions.length; i ++){ %>
            <option 
                value="<%= fieldOptions[i].value %>" 
                <%= fieldValue===fieldOptions[i].value ? "selected" : "" %>
            >
                <%= fieldOptions[i].label %>
            </option>
        <% } %>
    </select>
</div>